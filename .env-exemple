# .env.example (VERSÃO SEGURA - COM PLACEHOLDERS)

# Banco de dados MongoDB
DATABASE_URL="mongodb+srv://usuario:senha@cluster.mongodb.net/nome_banco?retryWrites=true&w=majority"

# Cloudinary
CLOUDINARY_CLOUD_NAME=seu_cloud_name
CLOUDINARY_API_KEY=sua_api_key
CLOUDINARY_API_SECRET=sua_api_secret

# Firebase
FIREBASE_SERVICE_ACCOUNT_JSON=/path/to/serviceAccountKey.json

# JWT
JWT_SECRET=seu_jwt_secret_aqui

# Porta do servidor
PORT=4000

# Configuração de email
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=seu_email@gmail.com
MAIL_PASS=sua_senha_de_app  # NÃO USE SENHA NORMAL, USE SENHA DE APLICAÇÃO
MAIL_FROM="Seu Nome <seu_email@gmail.com>"

# Stripe
STRIPE_PUBLIC_KEY=pk_test_seu_public_key_aqui
STRIPE_SECRET_KEY=sk_test_seu_secret_key_aqui
STRIPE_WEBHOOK_SECRET=whsec_seu_webhook_secret_aqui