generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Usuários do sistema
model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String
  name     String
  role     String
  status   String @default("PENDING")
  elderCredits        Int @default(0)
  collaboratorCredits Int @default(0)
  
  createdAt DateTime @default(now())

  elderProfile   Elder?  @relation("UserToElder", fields: [elderProfileId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  elderProfileId String? @db.ObjectId
  managedElders Elder[] @relation("ChiefElders")

  collaborations       Collaborator[] @relation("CollaboratorUser")
  chiefOfCollaborators Collaborator[] @relation("CollaboratorChief")

  payments Payment[]
}
// Idosos cadastrados no sistema
model Elder {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  cpf              String   @unique
  name             String
  age              Int
  birthData        DateTime?
  emergencyContact String
  medicalConditions String[]
  medications      String[]
  createdAt        DateTime @default(now())

  // Dono do cadastro (Familiar/Admin que cadastrou)
  chiefId String @db.ObjectId
  chief   User   @relation("ChiefElders", fields: [chiefId], references: [id])

  // RELAÇÃO REVERSA: O usuário que "é" este idoso
  userAccount User[] @relation("UserToElder")

  collaborators Collaborator[]
  reminders     Reminder[]
  emergencies   Emergency[]
  audios        Audio[]
}

// Tabela de ligação para Colaboradores (Cuidadores extras)
model Collaborator {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  
  userId  String @db.ObjectId
  user    User   @relation("CollaboratorUser", fields: [userId], references: [id])

  elderId String @db.ObjectId
  elder   Elder  @relation(fields: [elderId], references: [id])

  chiefId String @db.ObjectId
  chief   User   @relation("CollaboratorChief", fields: [chiefId], references: [id])

  createdAt DateTime @default(now())
}

model Reminder {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  time        String
  type        String    // Medicamento, Refeição, Rotina, Evento
  daysOfWeek  Int[]
  isCompleted Boolean   @default(false)
  lastDone    DateTime?
  
  elderId     String    @db.ObjectId
  elder       Elder     @relation(fields: [elderId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([elderId])
}

model Emergency {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  elderId   String   @db.ObjectId
  chiefId   String   @db.ObjectId
  elder     Elder    @relation(fields: [elderId], references: [id], onDelete: Cascade)
  at        DateTime @default(now())
  location  String?
  resolved  Boolean  @default(false)
}

model Audio {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  elderId     String   @db.ObjectId
  elder       Elder    @relation(fields: [elderId], references: [id], onDelete: Cascade)
  url         String
  duration    Int
  transcript  String?
  status      String   @default("PENDING") // "PENDING" | "APPROVED" | "REJECTED"
  createdAt   DateTime @default(now())
}

// Segurança e Logs
model VerificationCode {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  code      String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model OTPResendLog {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String
  ip      String
  sentAt  DateTime @default(now())

  @@index([email])
  @@index([ip])
}

model Payment {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userId          String   @db.ObjectId
  user            User     @relation(fields: [userId], references: [id])
  type            String  
  amount          Int
  stripeSessionId String   @unique
  status          String   @default("PENDING")
  createdAt       DateTime @default(now())
}